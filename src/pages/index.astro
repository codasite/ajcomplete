---
import Layout from '../layouts/Layout.astro';
import RebateCard from '../components/RebateCard.astro';
import ServiceCard from '../components/ServiceCard.astro';

const rebates = [
  {
    logo: '/download.jpeg',
    logoAlt: 'Ameren',
    title: 'Utility Rebate',
    description: 'Save up to $900 on heat pumps and $115 on smart thermostats through Ameren Illinois.',
    link: 'https://amerenillinoissavings.com/residential/products-discounts-and-rebates/hvac-and-water-heating-discounts/',
  },
  {
    logo: '/Nicor_Gas_Logo.jpg',
    logoAlt: 'Nicor Gas',
    title: 'Utility Rebate',
    description: 'Save up to $275 on Furnace and Smart Thermostat Bundle.',
    link: 'https://www.nicorgas.com/residential/ways-to-save/rebates.html',
  },
  {
    logo: '/Full_Color_YORK_Logo.png',
    logoAlt: 'YORK',
    title: 'Homeowner Rebate',
    description: '100% factory-funded rebates of up to $500 on eligible YORK® equipment.',
    link: 'https://ductedsystemsincentives.com/',
  },
  {
    logo: '/Full_Color_YORK_Logo.png',
    logoAlt: 'YORK',
    title: 'Teachers & First Responders Rebate',
    description: 'Rebates of up to $600 on eligible YORK® equipment.',
    link: 'https://ductedsystemsincentives.com/',
  },
];

const brands = [
  { src: '/Full_Color_YORK_Logo.png', alt: 'YORK' },
  { src: '/Mitsubishi-logo-primary-300.png', alt: 'Mitsubishi Electric' },
  { src: '/Gree-Logo-500x281-1.webp', alt: 'Gree' },
];

const services = [
  {
    icon: 'heating',
    title: 'Heating',
    description: 'Keep your home warm with our furnace installation, repair, and maintenance services.',
    link: '/services/heating',
  },
  {
    icon: 'cooling',
    title: 'Air Conditioning',
    description: 'Stay cool with our AC installation, repair, and maintenance services.',
    link: '/services/cooling',
  },
  {
    icon: 'refrigeration',
    title: 'Commercial',
    description: 'Commercial refrigeration and restaurant equipment services.',
    link: '/services/commercial',
  },
  {
    icon: 'air',
    title: 'Indoor Air Quality',
    description: 'Breathe cleaner air with our IAQ solutions.',
    link: '/services/indoor-air-quality',
  },
];
---

<Layout title="Heating, Air Conditioning, Refrigeration">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white overflow-hidden">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28 relative">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            Your Complete HVAC Solution
          </h1>
          <p class="mt-6 text-lg md:text-xl text-gray-200 leading-relaxed">
            Proudly serving La Salle, Princeton, Henry, Bureau, and Putnam in Illinois for 11 years.
          </p>
          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <a
              href="tel:815-274-9087"
              class="inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary-700 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call Us 24/7
            </a>
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold text-lg border-2 border-white/30 hover:bg-white/10 transition-colors"
            >
              Get a Quote
            </a>
          </div>
        </div>
        <div class="hidden md:block">
          <img
            src="/Truck-In-Neighborhood.png"
            alt="A&J Complete Service truck"
            class="w-full rounded-lg shadow-2xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- 24 Hour Emergency Banner -->
  <section class="bg-primary-600 text-white py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="bg-white/20 p-3 rounded-full">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h2 class="text-xl font-bold">24 Hour Emergency Service</h2>
            <p class="text-white/80">Nothing is worse than losing heating or cooling when you need it most.</p>
          </div>
        </div>
        <a
          href="tel:815-274-9087"
          class="inline-flex items-center gap-2 bg-white text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Us 24/7
        </a>
      </div>
    </div>
  </section>

  <!-- Rebates Section -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Available Rebates & Savings</h2>
        <p class="mt-4 text-lg text-gray-600">Take advantage of these money-saving opportunities</p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {rebates.map((rebate) => (
          <RebateCard {...rebate} />
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Our Services</h2>
        <p class="mt-4 text-lg text-gray-600">Complete HVAC solutions for residential and commercial properties</p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {services.map((service) => (
          <ServiceCard {...service} />
        ))}
      </div>
      <div class="text-center mt-10">
        <a
          href="/services"
          class="inline-flex items-center gap-2 bg-secondary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-secondary-700 transition-colors"
        >
          View All Services
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Brands Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-center text-gray-900 mb-10">Brands We Trust</h2>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
        {brands.map((brand) => (
          <img src={brand.src} alt={brand.alt} class="h-12 md:h-16 w-auto object-contain" />
        ))}
      </div>
    </div>
  </section>

  <!-- Warranty Section -->
  <section class="py-16 md:py-24 bg-secondary-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold">Industry-Leading Warranties</h2>
          <p class="mt-6 text-lg text-gray-300 leading-relaxed">
            We offer a 90-day warranty on all parts and labor. Your satisfaction is our priority, and we stand behind every job we complete.
          </p>
          <a
            href="/contact"
            class="mt-8 inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
          >
            Learn More About Our Warranty
          </a>
        </div>
        <div class="flex justify-center">
          <div class="bg-white/10 p-8 rounded-2xl backdrop-blur">
            <div class="text-center">
              <div class="text-6xl font-bold text-primary-500">90</div>
              <div class="text-2xl font-semibold mt-2">Day Warranty</div>
              <p class="text-gray-400 mt-2">On All Parts & Labor</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gradient-to-r from-primary-600 to-primary-700 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold">Ready to Get Started?</h2>
      <p class="mt-4 text-lg text-white/90">
        Contact us today for a free estimate on your HVAC needs.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="tel:815-274-9087"
          class="inline-flex items-center justify-center gap-2 bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          815-274-9087
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold text-lg border-2 border-white hover:bg-white/10 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
