---
import Layout from '../layouts/Layout.astro';

const sections = [
  {
    title: 'Main Pages',
    links: [
      { href: '/', label: 'Home' },
      { href: '/about', label: 'About Us' },
      { href: '/services', label: 'Services' },
      { href: '/contact', label: 'Contact' },
    ],
  },
  {
    title: 'Services',
    links: [
      { href: '/services/heating', label: 'Heating Services' },
      { href: '/services/cooling', label: 'Cooling Services' },
      { href: '/services/indoor-air-quality', label: 'Indoor Air Quality' },
      { href: '/services/commercial', label: 'Commercial & Restaurant' },
    ],
  },
  {
    title: 'Customer Resources',
    links: [
      { href: '/warranty', label: 'Warranty' },
      { href: '/maintenance', label: 'Maintenance Plans' },
      { href: '/financing', label: 'Financing' },
    ],
  },
];
---

<Layout title="Sitemap">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">Sitemap</h1>
      <p class="mt-4 text-xl text-gray-200">
        Find what you're looking for
      </p>
    </div>
  </section>

  <!-- Sitemap Content -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-12">
        {sections.map((section) => (
          <div>
            <h2 class="text-xl font-bold text-gray-900 mb-6 pb-2 border-b border-gray-200">
              {section.title}
            </h2>
            <ul class="space-y-3">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-gray-600 hover:text-primary-600 transition-colors inline-flex items-center gap-2"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900">Can't find what you're looking for?</h2>
      <p class="mt-4 text-gray-600">
        Contact us and we'll be happy to help.
      </p>
      <a
        href="/contact"
        class="mt-6 inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
      >
        Contact Us
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</Layout>
