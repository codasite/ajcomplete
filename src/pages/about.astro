---
import Layout from '../layouts/Layout.astro';

const values = [
  {
    title: 'Expertise',
    description: 'Our team specializes in all aspects of heating and cooling coordination, ensuring that every job is done right the first time.',
    icon: 'expertise',
  },
  {
    title: 'Trustworthy',
    description: 'As a family-owned and operated business, we prioritize building long-lasting relationships with our clients based on trust and reliability.',
    icon: 'trust',
  },
  {
    title: 'Comprehensive Care',
    description: 'From installation to repair and maintenance, we offer complete HVAC services to meet all your needs.',
    icon: 'care',
  },
];

const icons = {
  expertise: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
  trust: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  care: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
};
---

<Layout title="About Us">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">About Us</h1>
      <p class="mt-4 text-xl text-gray-200 max-w-3xl mx-auto">
        Family-owned and operated, proudly serving Illinois communities for over 11 years.
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Your Trusted HVAC Partner</h2>
          <div class="mt-6 space-y-4 text-gray-600 leading-relaxed">
            <p>
              A & J Complete Service has been proudly serving La Salle, Princeton, Henry, Bureau, and Putnam in Illinois for 11 years. You can trust us for your total HVAC repair, maintenance, and installation services.
            </p>
            <p>
              Count on us to help you get the most out of your climate control system. Call our family-owned and operated business to schedule your appointment today.
            </p>
            <p>
              Work with a company that specializes in all aspects of heating and cooling coordination. From establishing a multi-zone climate system in any home to servicing ranges at the local bar and grill, we have got you covered.
            </p>
          </div>
          <div class="mt-8">
            <a
              href="/contact"
              class="inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 font-semibold hover:bg-primary-700 transition-colors"
            >
              Contact Us Today
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
        <div>
          <img
            src="/Truck-In-Neighborhood.png"
            alt="A&J Complete Service truck"
            class="w-full rounded-lg shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Why Choose Us?</h2>
        <p class="mt-4 text-lg text-gray-600">
          We're committed to providing exceptional service and building lasting relationships.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {values.map((value) => (
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 text-center">
            <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[value.icon as keyof typeof icons]} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{value.title}</h3>
            <p class="text-gray-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Work Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Our Work</h2>
        <p class="mt-4 text-lg text-gray-600">
          From residential installations to commercial HVAC systems, we take pride in every job.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="overflow-hidden shadow-lg">
          <img
            src="/image000000 2.JPG"
            alt="Commercial YORK rooftop HVAC unit installation"
            class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="overflow-hidden shadow-lg">
          <img
            src="/image000000 5.JPG"
            alt="Large commercial YORK HVAC system"
            class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="overflow-hidden shadow-lg">
          <img
            src="/IMG_20220504_101506064_HDR-scaled.jpg"
            alt="Commercial rooftop unit installation with crane"
            class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
      </div>
      <div class="text-center mt-10">
        <a
          href="/gallery"
          class="inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 font-semibold hover:bg-primary-700 transition-colors"
        >
          View Full Gallery
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- BBB Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-secondary-50 rounded-2xl p-8 md:p-12 flex flex-col md:flex-row items-center justify-between gap-8">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900">BBB Accredited Business</h2>
          <p class="mt-3 text-gray-600 max-w-xl">
            We're proud to be a BBB Accredited Business. Our commitment to quality and customer satisfaction has earned us this recognition.
          </p>
        </div>
        <a
          href="https://www.bbb.org/us/il/tiskilwa/profile/heating-and-air-conditioning/a-j-complete-service-corp-0724-1000033573"
          target="_blank"
          rel="noopener noreferrer"
          class="flex-shrink-0"
        >
          <img src="/AB-seal-horz.png" alt="BBB Accredited Business" class="h-16 w-auto" />
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-primary-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold">Ready to Work with Us?</h2>
      <p class="mt-4 text-lg text-white/90">
        Contact us today to schedule your HVAC service or get a free estimate.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="tel:815-274-9087"
          class="inline-flex items-center justify-center gap-2 bg-white text-primary-600 px-8 py-4 font-semibold text-lg hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          815-274-9087
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold text-lg border-2 border-white hover:bg-white/10 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
