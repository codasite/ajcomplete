---
import Layout from '../layouts/Layout.astro';

const galleryImages = [
  {
    src: '/Truck-In-Neighborhood.png',
    alt: 'A&J Complete Service truck',
    category: 'Company',
  },
  {
    src: '/image000000.JPG',
    alt: 'Gree mini-split outdoor unit installation',
    category: 'Residential',
  },
  {
    src: '/image000001.JPG',
    alt: 'Residential air conditioning unit',
    category: 'Residential',
  },
  {
    src: '/image000000 4.JPG',
    alt: 'YORK furnace installation',
    category: 'Residential',
  },
  {
    src: '/Lifestyle_6045_23_YORK_HR_jpg.jpg',
    alt: 'Technician servicing YORK furnace',
    category: 'Service',
  },
  {
    src: '/IMG_20220504_101506064_HDR-scaled.jpg',
    alt: 'Commercial rooftop unit installation with crane',
    category: 'Commercial',
  },
  {
    src: '/IMG_20220325_082344031_HDR-scaled.jpg',
    alt: 'Walk-in cooler refrigeration system',
    category: 'Commercial',
  },
  {
    src: '/image000000 2.JPG',
    alt: 'Commercial YORK rooftop HVAC unit',
    category: 'Commercial',
  },
  {
    src: '/image000000 3.JPG',
    alt: 'Commercial YORK unit installation',
    category: 'Commercial',
  },
  {
    src: '/image000000 5.JPG',
    alt: 'Large commercial YORK HVAC system',
    category: 'Commercial',
  },
  {
    src: '/4900-20_0719.jpg',
    alt: 'iWave air ionization system',
    category: 'Indoor Air Quality',
  },
];
---

<Layout title="Project Gallery">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">Project Gallery</h1>
      <p class="mt-4 text-xl text-gray-200 max-w-3xl mx-auto">
        See our work in action - residential and commercial HVAC installations
      </p>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {galleryImages.map((image) => (
          <div class="group relative overflow-hidden shadow-lg">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-72 object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <span class="inline-block bg-primary-600 text-white text-xs font-bold px-2 py-1 mb-2">
                  {image.category}
                </span>
                <p class="text-white text-sm">{image.alt}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Ready to Start Your Project?</h2>
      <p class="mt-4 text-lg text-gray-600">
        Contact us today to discuss your heating, cooling, or refrigeration needs.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="tel:815-274-9087"
          class="inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-8 py-4 font-semibold text-lg hover:bg-primary-700 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          815-274-9087
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold text-lg border-2 border-gray-900 text-gray-900 hover:bg-gray-900 hover:text-white transition-colors"
        >
          Get a Quote
        </a>
      </div>
    </div>
  </section>
</Layout>
