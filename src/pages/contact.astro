---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">Contact Us</h1>
      <p class="mt-4 text-xl text-gray-200 max-w-3xl mx-auto">
        Get in touch for a free estimate or to schedule your service
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Get In Touch</h2>

          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Phone</h3>
                <a href="tel:815-274-9087" class="text-primary-600 hover:text-primary-700 text-lg font-medium">
                  815-274-9087
                </a>
                <p class="text-gray-500 text-sm mt-1">24/7 Emergency Service Available</p>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-secondary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Address</h3>
                <p class="text-gray-600">
                  226 W Main St.<br />
                  Tiskilwa, IL 61368
                </p>
              </div>
            </div>

            <!-- Service Area -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Service Area</h3>
                <p class="text-gray-600">
                  La Salle, Princeton, Henry, Bureau, and Putnam counties in Illinois
                </p>
              </div>
            </div>
          </div>

          <!-- BBB Badge -->
          <div class="mt-10 pt-8 border-t border-gray-200">
            <a
              href="https://www.bbb.org/us/il/tiskilwa/profile/heating-and-air-conditioning/a-j-complete-service-corp-0724-1000033573"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block"
            >
              <img src="/AB-seal-horz.png" alt="BBB Accredited Business" class="h-12 w-auto" />
            </a>
          </div>
        </div>

        <!-- Contact Form - JotForm Embed -->
        <div class="bg-gray-50 rounded-2xl p-4 md:p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
          <div class="jotform-container">
            <script type="text/javascript" src="https://form.jotform.com/jsform/241515878745165"></script>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="h-96 bg-gray-200">
    <iframe
      src="https://www.openstreetmap.org/export/embed.html?bbox=-89.61307525634767%2C41.18950609960997%2C-89.45428848266603%2C41.30708446640684&layer=mapnik&marker=41.24832173171124%2C-89.53368186950684"
      width="100%"
      height="100%"
      style="border:0;"
      loading="lazy"
      title="A&J Complete Service Location"
    ></iframe>
  </section>
</Layout>
