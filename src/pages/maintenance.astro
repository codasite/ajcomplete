---
import Layout from '../layouts/Layout.astro';

const maintenancePlans = [
  {
    name: '1 Year',
    duration: '1 Year Plan',
    features: [
      'Annual system inspection',
      'Filter replacement',
      'Coil cleaning',
      'Refrigerant check',
      'Thermostat calibration',
      'Safety controls testing',
    ],
    popular: false,
  },
  {
    name: '3 Year',
    duration: '3 Year Plan',
    features: [
      'Annual system inspection',
      'Filter replacement',
      'Coil cleaning',
      'Refrigerant check',
      'Thermostat calibration',
      'Safety controls testing',
      'Priority scheduling',
      'Blower motor lubrication',
    ],
    popular: true,
  },
  {
    name: '5 Year',
    duration: '5 Year Plan',
    features: [
      'Annual system inspection',
      'Filter replacement',
      'Coil cleaning',
      'Refrigerant check',
      'Thermostat calibration',
      'Safety controls testing',
      'Priority scheduling',
      'Blower motor lubrication',
      'Ductwork inspection',
      'Electrical connections check',
    ],
    popular: false,
  },
];

const benefits = [
  {
    title: 'Extend Equipment Life',
    description: 'Regular maintenance keeps your system running efficiently and can add years to its lifespan.',
    icon: 'life',
  },
  {
    title: 'Lower Energy Bills',
    description: 'A well-maintained system uses less energy, saving you money on monthly utility costs.',
    icon: 'savings',
  },
  {
    title: 'Prevent Breakdowns',
    description: 'Catch small issues before they become expensive repairs or emergency situations.',
    icon: 'prevent',
  },
  {
    title: 'Better Air Quality',
    description: 'Clean filters and coils mean cleaner air circulating throughout your home.',
    icon: 'air',
  },
];

const icons = {
  life: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  savings: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  prevent: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  air: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />`,
};
---

<Layout title="Maintenance Plans">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">Maintenance Plans</h1>
      <p class="mt-4 text-xl text-gray-200 max-w-3xl mx-auto">
        Preventative maintenance to keep your system running at peak performance
      </p>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Protect Your Investment</h2>
        <p class="mt-6 text-lg text-gray-600 leading-relaxed">
          Preventative maintenance can be purchased for any unit â€” whether we installed it or not. Regular maintenance is the key to keeping your HVAC system running efficiently, preventing unexpected breakdowns, and extending the life of your equipment.
        </p>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-center text-gray-900 mb-12">Why Maintenance Matters</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {benefits.map((benefit) => (
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 text-center">
            <div class="w-14 h-14 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[benefit.icon as keyof typeof icons]} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{benefit.title}</h3>
            <p class="text-gray-600 text-sm">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Maintenance Plans -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Choose Your Plan</h2>
        <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
          Select the maintenance plan that fits your needs. All plans include comprehensive system care.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {maintenancePlans.map((plan) => (
          <div class={`relative bg-white rounded-2xl shadow-sm border ${plan.popular ? 'border-primary-500 ring-2 ring-primary-500' : 'border-gray-200'} p-8`}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                <span class="bg-primary-600 text-white px-4 py-1 rounded-full text-sm font-medium">
                  Most Popular
                </span>
              </div>
            )}
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-gray-900">{plan.name}</h3>
              <p class="text-gray-500 mt-1">{plan.duration}</p>
            </div>
            <ul class="space-y-3 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
            <a
              href="/contact"
              class={`block w-full text-center px-6 py-3 rounded-lg font-semibold transition-colors ${
                plan.popular
                  ? 'bg-primary-600 text-white hover:bg-primary-700'
                  : 'bg-gray-100 text-gray-900 hover:bg-gray-200'
              }`}
            >
              Get a Quote
            </a>
          </div>
        ))}
      </div>

      <p class="text-center text-gray-500 mt-8 text-sm">
        * Maintenance plans are available for any HVAC unit. Contact us for pricing and details.
      </p>
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="py-16 bg-secondary-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold">What's Included in Every Visit</h2>
          <p class="mt-4 text-gray-300">
            Our certified technicians perform a comprehensive inspection and tune-up during each maintenance visit.
          </p>
        </div>
        <div class="bg-white/10 rounded-2xl p-8">
          <ul class="space-y-4">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Complete system inspection</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Filter check and replacement</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Coil cleaning</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Refrigerant level check</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Thermostat calibration</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Safety controls testing</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-primary-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold">Ready to Protect Your System?</h2>
      <p class="mt-4 text-lg text-white/90">
        Contact us today to learn more about our maintenance plans and get a quote for your system.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="tel:815-274-9087"
          class="inline-flex items-center justify-center gap-2 bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          815-274-9087
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold text-lg border-2 border-white hover:bg-white/10 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
