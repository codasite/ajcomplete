---
import Layout from '../layouts/Layout.astro';

const services = [
  {
    title: 'Heating Services',
    icon: 'heating',
    link: '/services/heating',
    image: '/image000000 4.JPG',
    imageAlt: 'YORK furnace installation',
    description: 'Keep your home warm and comfortable all winter long with our comprehensive heating services.',
    items: [
      'Furnace Installation',
      'Furnace Repair',
      'Furnace Maintenance',
      'Heat Pump Services',
      'Boiler Services',
      'Tankless Water Heaters',
    ],
  },
  {
    title: 'Cooling Services',
    icon: 'cooling',
    link: '/services/cooling',
    image: '/image000000.JPG',
    imageAlt: 'Gree mini-split outdoor unit',
    description: 'Stay cool during the hot summer months with our expert air conditioning services.',
    items: [
      'AC Installation',
      'AC Repair',
      'AC Maintenance',
      'Central Air Systems',
      'Ductless Mini-Splits',
      'Heat Pumps',
    ],
  },
  {
    title: 'Indoor Air Quality',
    icon: 'air',
    link: '/services/indoor-air-quality',
    image: '/Lifestyle_6045_23_YORK_HR_jpg.jpg',
    imageAlt: 'HVAC technician servicing equipment',
    description: 'Breathe cleaner, healthier air with our indoor air quality solutions.',
    items: [
      'Ionization Systems',
      'Air Cleaners',
      'Humidifiers',
      'Air Purifiers',
      'Ventilation',
      'Duct Cleaning',
    ],
  },
  {
    title: 'Commercial & Restaurant',
    icon: 'refrigeration',
    link: '/services/commercial',
    image: '/IMG_20220325_082344031_HDR-scaled.jpg',
    imageAlt: 'Walk-in cooler refrigeration system',
    description: 'Professional refrigeration and equipment services for restaurants and commercial businesses.',
    items: [
      'Walk-in Coolers & Freezers',
      'Restaurant Equipment',
      'Ice Machines',
      'Commercial HVAC',
      'Kitchen Equipment Repair',
      'Preventive Maintenance',
    ],
  },
];

const icons = {
  heating: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />`,
  cooling: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707" />`,
  air: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />`,
  refrigeration: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />`,
};
---

<Layout title="Our Services">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">Our Services</h1>
      <p class="mt-4 text-xl text-gray-200 max-w-3xl mx-auto">
        Complete HVAC solutions for residential and commercial properties
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service, index) => (
          <div class={`bg-white shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-shadow animate-on-scroll animate-fade-up stagger-${index + 1}`}>
            <div class="h-48 overflow-hidden">
              <img
                src={service.image}
                alt={service.imageAlt}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-8">
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-secondary-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[service.icon as keyof typeof icons]} />
                </div>
                <div>
                  <h2 class="text-2xl font-bold text-gray-900">{service.title}</h2>
                  <p class="mt-2 text-gray-600">{service.description}</p>
                </div>
              </div>
              <ul class="mt-6 grid grid-cols-2 gap-3">
                {service.items.map((item) => (
                  <li class="flex items-center gap-2 text-gray-700">
                    <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
              <a
                href={service.link}
                class="mt-6 inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 font-semibold hover:bg-primary-700 transition-colors"
              >
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Brands Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-center text-gray-900 mb-10">Brands We Install & Service</h2>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
        <img src="/Full_Color_YORK_Logo.png" alt="YORK" class="h-12 md:h-16 w-auto object-contain" />
        <img src="/Mitsubishi-logo-primary-300.png" alt="Mitsubishi Electric" class="h-12 md:h-16 w-auto object-contain" />
        <img src="/Gree-Logo-500x281-1.webp" alt="Gree" class="h-12 md:h-16 w-auto object-contain" />
      </div>
    </div>
  </section>

  <!-- Emergency Service -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="flex items-center gap-4">
          <div class="bg-white/20 p-4 rounded-full">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold">24 Hour Emergency Service</h2>
            <p class="text-white/80 mt-1">We're here when you need us most. Available 24/7 for emergency repairs.</p>
          </div>
        </div>
        <a
          href="tel:815-274-9087"
          class="inline-flex items-center gap-2 bg-white text-primary-600 px-8 py-4 font-semibold text-lg hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now: 815-274-9087
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Need HVAC Service?</h2>
      <p class="mt-4 text-lg text-gray-600">
        Contact us today for a free estimate or to schedule your service appointment.
      </p>
      <div class="mt-8">
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-secondary-600 text-white px-8 py-4 font-semibold text-lg hover:bg-secondary-700 transition-colors"
        >
          Get a Free Estimate
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
