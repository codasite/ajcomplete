---
import Layout from '../../layouts/Layout.astro';

const restaurantEquipment = [
  'Fryers',
  'Steam tables',
  'Ice machines',
  'Griddles',
  'Steamers',
  'Hoods',
  'Disposals',
  'Refrigerated prep tables',
  'Exhaust fans',
];

const services = [
  {
    title: 'HVAC Systems for Businesses',
    description: 'We understand the unique needs of commercial properties. Our team can design and install multi-zone climate systems to meet the specific requirements of your business.',
    icon: 'building',
  },
  {
    title: 'Specialized Equipment Servicing',
    description: 'From restaurant ranges to commercial refrigeration units, we have the expertise to service and maintain all types of heating and cooling equipment.',
    icon: 'tool',
  },
  {
    title: 'Quality Restaurant Refrigeration',
    description: "Refrigeration is one of the most important aspects of any restaurant or commercial kitchen. If you have issues with your walk-in coolers or freezers, call A & J Complete Service right away. Your equipment will be repaired or replaced quickly and efficiently.",
    icon: 'refrigerator',
  },
];

const icons = {
  building: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`,
  tool: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
  refrigerator: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />`,
};
---

<Layout title="Commercial & Restaurant Services">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-900 via-secondary-800 to-secondary-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold">Commercial & Restaurant Services</h1>
      <p class="mt-4 text-xl text-gray-200 max-w-3xl mx-auto">
        Your one-stop shop for restaurant equipment repair
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Your Restaurant Equipment Repair Experts</h2>
          <p class="mt-6 text-lg text-gray-600 leading-relaxed">
            When your restaurant's equipment isn't working properly, call the experts at A & J Complete Service. Your equipment will be working like new in no time.
          </p>
          <p class="mt-4 text-lg text-gray-600 leading-relaxed">
            Your refrigeration system is important, but what if your fryer, exhaust fan, or refrigerated prep tables were having issues? Turn to our knowledgeable technicians for all your restaurant equipment repair needs.
          </p>
          <a
            href="tel:815-274-9087"
            class="mt-8 inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call Us 815-274-9087
          </a>
        </div>
        <div>
          <img
            src="/IMG_20220504_101506064_HDR-scaled.jpg"
            alt="Commercial HVAC installation"
            class="w-full rounded-lg shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Restaurant Equipment List -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="/IMG_20220325_082344031_HDR-scaled.jpg"
            alt="Walk-in cooler installation"
            class="w-full rounded-lg shadow-xl"
          />
        </div>
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Equipment We Service</h2>
          <p class="mt-4 text-lg text-gray-600">
            We repair and maintain a wide variety of commercial kitchen and restaurant equipment:
          </p>
          <ul class="mt-6 grid grid-cols-2 gap-3">
            {restaurantEquipment.map((item) => (
              <li class="flex items-center gap-2 text-gray-700">
                <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">Our Commercial Services</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 hover:shadow-md transition-shadow">
            <div class="w-14 h-14 bg-secondary-100 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[service.icon as keyof typeof icons]} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Expert Services -->
  <section class="py-16 bg-secondary-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold">Expert Services for All Aspects of Your Restaurant</h2>
        <p class="mt-6 text-lg text-gray-300">
          From walk-in coolers and freezers to fryers, exhaust fans, and refrigerated prep tables â€” we have the expertise to keep your commercial kitchen running smoothly.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
          <a
            href="tel:815-274-9087"
            class="inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            815-274-9087
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold text-lg border-2 border-white hover:bg-white/10 transition-colors"
          >
            Get a Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- 24 Hour Emergency -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="flex items-center gap-4">
          <div class="bg-white/20 p-4 rounded-full">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold">24 Hour Emergency Service</h2>
            <p class="text-white/80 mt-1">We understand that equipment failures don't wait for convenient times. We're here when you need us.</p>
          </div>
        </div>
        <a
          href="tel:815-274-9087"
          class="inline-flex items-center gap-2 bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now
        </a>
      </div>
    </div>
  </section>
</Layout>
