---
interface Props {
  logo: string;
  logoAlt: string;
  title: string;
  description: string;
  link: string;
}

const { logo, logoAlt, title, description, link } = Astro.props;
---

<div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col hover:shadow-md transition-shadow">
  <div class="h-16 flex items-center justify-center mb-4">
    <img src={logo} alt={logoAlt} class="max-h-full max-w-full object-contain" />
  </div>
  <h3 class="text-lg font-semibold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-600 text-sm flex-grow mb-4">{description}</p>
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-4 py-2.5 rounded-lg font-medium text-sm hover:bg-primary-700 transition-colors"
  >
    Claim Deal
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
    </svg>
  </a>
</div>
